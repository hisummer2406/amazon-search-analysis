# .env.production
# 应用配置
APP_NAME=Amazon Data Analysis
VERSION=1.0.0
DEBUG=false

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost/amazon_db
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:password@localhost/amazon_db
DATABASE_SCHEMA=analysis

# Redis配置
REDIS_URL=redis://localhost:6379

# 安全配置
ADMIN_SECRET_KEY=super-secret-key-production-change-this

# 文件上传配置
MAX_FILE_SIZE=3221225472
UPLOAD_DIR=./uploads

# 性能配置
BATCH_SIZE=5000
MAX_WORKERS=4
MULTIPROCESSING_THRESHOLD_GB=1.0
MULTITHREADING_THRESHOLD_MB=100.0
CHUNK_QUEUE_SIZE=50
SMALL_BATCH_SIZE=5000
QUERY_DAYS_LIMIT=7
ENABLE_PERFORMANCE_MONITORING=true
MONITORING_INTERVAL_SECONDS=5
